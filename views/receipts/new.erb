<section class="large-6 columns new-bill">
  <% flash.each do |key, value| %>
    <div data-alert class="alert-box <%= key %>">
      <%= value %>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>

  <h3><%= I18n.t(:upload_receipt) %></h3>

  <form id='upload_receipt' method="post" action="/bills/<%= @bill.id %>/receipts/create" enctype="multipart/form-data">
    <label for="contributor_name"><%= I18n.t(:name) %></label>
    <input name="contributor_name" type="text" autofocus value="<%= session['name']%>"/>

    <label for="contributor_email"><%= I18n.t(:email) %></label>
    <input name="contributor_email" type="text" required value="<%= session['email']%>"/>

    <label for="image"><%= I18n.t(:receipt) %></label>
    <input name="image" type="file" required/>

    <button type="submit" class="button"><%= I18n.t(:upload_receipt) %></button>
  </form>
</section>
