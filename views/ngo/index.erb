<section class="container main-content">

  <section class="row mb40">
    <div class="span3">
      <img class="ngo_photo" src="<%= @ngo.photo_url %>" alt="ngo photo"/>
    </div>
    <div class="span9">
      <h1 class="ngo-name"> <%= @ngo.name %></h1>
      <p><%= @ngo.description %></p>

      <div class="contact-info">
        <small>
          <i class="glyphicon glyphicon-user"></i>
          <%= @ngo.contact %>
        </small>
        <small>
          <i class="glyphicon glyphicon-earphone"></i>
          <%= @ngo.phone %>
        </small>
        <small>
          <i class="glyphicon glyphicon-globe"></i>
          <a href="<%= @ngo.website %>" target="blank"><%= @ngo.website %></a>
        </small>
        <small>
          <i class="glyphicon glyphicon-envelope"></i>
          <a href="mailto:<%= @ngo.email %>"><%= @ngo.email %></a>
        </small>
      </div>
    </div>
  </section>


  <fieldset >
    <legend>Nossas Contas</legend>

    <section class="sort_list">
      <div class="text-center">
        <small class="text-muted">Contas ordenadas por:</small>
      </div>
      <ul class="nav nav-pills">
        <li class="active">
          <a href="javascript:void(0);" id="gt_value"><%= I18n.t("gt_value") %></a>
        </li>
        <li>
          <a href="javascript:void(0);" id="lt_value"><%= I18n.t("lt_value") %></a>
        </li>
        <li>
          <a href="javascript:void(0);" id="due_date"><%= I18n.t("due_date") %></a>
        </li>
        <li>
          <a href="javascript:void(0);" id="status"><%= I18n.t("status") %></a>
        </li>
      </ul>
    </section>

    <section>
      <ul id="all_bills">
        <% @ngo.bills.each do |bill| %>
          <li class="bill" data-n="<%= bill.id %>">
            <div class="thumbnail">
              <div class="caption">
                <a href="javascript:void(0);" class="th mb20 block bill-image <%= bill.status %>" title="Ver detalhes da conta">
                  <img src="<%= bill.image_url %>" alt="<%= bill.filename %>">
                </a>

                <h3><%= bill.issued_by %></h3>
                <p class="total_amount">R$ <%= "%.2f" % bill.total_amount %></p>
                <p class="due_date" data-timestamp="<%= bill.due_date.to_time.to_i %>">
                  <%= I18n.l bill.due_date %>
                </p>

              </div>
            </div>
            <div class="text-center bill-actions">
              <% if bill.status == :opened %>
                <a href="/bill/reserve/<%= bill.id %>" class="btn btn-default">
                  <%= I18n.t("reserve_bill") %>
                </a>
              <% end %>
              <a href="/bills/<%= bill.id %>/receipts/new" class="btn btn-success">
                <%= I18n.t("upload_receipt") %>
              </a>
            </div>
          </li>
        <% end %>
      </ul>
    </section>
  </fieldset>

</section>
